<legend><h2 class="green">Add User - Model AccessID <%=@authorizable.id%></h2></legend>

<br/>

<p><b>Control who can edit your selected Model EntryID. Please enter the member email:</b></p>

<br/>

<%= semantic_form_for([@organism,@authorizable,@authorization], :multipart => true )  do |f| %>
  <%= form_errors(f) %>
  
    <%= f.inputs do%>
  		<%= f.input :email %>
  	<% end %>

  <%= f.actions do %>
  
  <%= f.action :submit %>
  <%= link_to "cancel" , [@organism,@authorizable]%>
  
  <% end %>
  
  
<% end %>