<h2 class="green">Edit <%= resource_name.to_s.humanize %></h2>
</br> 

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :affiliation %>
    <%= f.input :research_interests %>
    <%= f.input :home_page %>
    <%= f.input :email %>
    <%= f.input :password, as: :password %>
    <%= f.input :password_confirmation, as: :password %>
    
    <%= f.input :current_password, as: :password, required: true, hint: "(we need your current password to confirm your changes)"  %>
    
  
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: "Update account"  %>
  <% end %>

<% end %>
</br> 
</br>
</br>
<h2 class="green">Cancel my account</h2>
</br>
<p>Unhappy? &nbsp; <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure you want to cancel this KiMoSys account?" }, :method => :delete %></p>
</br>
</br>
<div class="right">
	<%= link_to "#{image_tag('BackImage.JPG')} Back".html_safe, organisms_path %>

</div>
